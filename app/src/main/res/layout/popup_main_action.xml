<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#191d37"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2.1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/ab_imagebutton_tablet_action_print"
                    android:visibility="gone" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"

                    android:background="@drawable/ab_imagebutton_tablet_action_order"
                    android:visibility="gone" />

                <Button

                    android:id="@+id/popup_main_action_setting"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/roundlayout_selector_button_gray"
                    android:text="Settings"
                    android:textAllCaps="false"
                    android:textColor="#a1a1a1"

                    android:textSize="25dp"
                    android:textStyle="bold" />



                <Button

                    android:id="@+id/popup_main_action_general_modifier"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/roundlayout_selector_button_gray"
                    android:text="General Modifier"
                    android:textAllCaps="false"
                    android:textColor="#a1a1a1"

                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/popup_main_action_add_divider"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/roundlayout_selector_button_gray"
                    android:text="Add divider"
                    android:textAllCaps="false"
                    android:textColor="#a1a1a1"

                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/popup_main_action_giftcard"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/roundlayout_selector_button_gray"
                    android:text="GiftCard"
                    android:textAllCaps="false"
                    android:textColor="#a1a1a1"

                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/popup_main_action_tax_exempt"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/roundlayout_selector_button_gray"
                    android:text="Tax Exempt"
                    android:textAllCaps="false"
                    android:textColor="#a1a1a1"

                    android:textSize="25dp"
                    android:textStyle="bold" />



                <!--            -->


                <Button
                    android:id="@+id/popup_main_action_server"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/roundlayout_selector_button_gray"
                    android:text="Server"
                    android:textAllCaps="false"
                    android:textColor="#a1a1a1"

                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/popup_main_action_print"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/roundlayout_selector_button_gray"
                    android:text="Print"
                    android:textAllCaps="false"
                    android:textColor="#a1a1a1"

                    android:textSize="25dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/popup_main_action_pay"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_roundlayout_button_red"
                    android:text="PAY"
                    android:textAllCaps="false"

                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/popup_main_action_discount"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_roundlayout_button_green"
                    android:text="Discount"
                    android:textAllCaps="false"
                    android:textColor="#2ba021"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/popup_main_action_remove_gratuity"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/roundlayout_selector_button_gray"
                    android:text="Remove Gratuity"
                    android:textAllCaps="false"
                    android:textColor="#a1a1a1"

                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/popup_main_action_quick"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/roundlayout_selector_button_gray"
                    android:text="Quick"
                    android:textAllCaps="false"
                    android:textColor="#a1a1a1"

                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/popup_main_action_remove_tax_exempt"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/roundlayout_selector_button_gray"
                    android:text="Remove \nTax Exempt"
                    android:textAllCaps="false"
                    android:textColor="#a1a1a1"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/popup_main_action_product"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/roundlayout_selector_button_gray"
                    android:text="Product"
                    android:textAllCaps="false"
                    android:textColor="#a1a1a1"
                    android:textSize="25dp"
                    android:textStyle="bold" />



                <Button
                    android:id="@+id/popup_main_action_menusearch"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/roundlayout_selector_button_gray"
                    android:text="Menu Search"
                    android:textAllCaps="false"
                    android:textColor="#a1a1a1"

                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:visibility="gone"
                    android:id="@+id/popup_main_action_logout"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/selector_roundlayout_button_cart"
                    android:text="Log out"
                    android:textAllCaps="false"

                    android:textColor="#ff0000"
                    android:textSize="25dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/popup_main_action_close"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/tablet_button_selector_red_line"
        android:text="CLOSE"
        android:textColor="#8d0704"
        android:textSize="40dp" />

</RelativeLayout>