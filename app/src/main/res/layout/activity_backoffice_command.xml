<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:weightSum="10"
        android:background="#15243b"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#ffffff"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/back_office_title"
                    android:textSize="28dp"
                    android:gravity="center"
                    android:text="QSRt POS Back Office"
                    android:layout_marginRight="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/back_office_title_middle_linear"
                    android:layout_toRightOf="@+id/back_office_title"
                    android:layout_toLeftOf="@+id/back_office_title_close_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:padding="5dp"
                        android:gravity="center"
                        android:text="Store "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:id="@+id/back_office_title_store"
                        android:gravity="center"
                        android:text=" NZ Store "
                        android:background="#1a2b44"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:padding="5dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="Store Code"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/back_office_title_store_code"
                        android:gravity="center"
                        android:text="1234"
                        android:textColor="#ffffff"
                        android:background="#1a2b44"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="Station Code "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/back_office_title_station_code"
                        android:gravity="center"
                        android:text="NZ Store"
                        android:textColor="#ffffff"
                        android:background="#1a2b44"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="Push "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/back_office_title_push"
                        android:gravity="center"
                        android:text="Not Receiving"
                        android:textColor="#ffffff"
                        android:background="#1a2b44"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:id="@+id/back_office_title_station_name"
                        android:gravity="center"
                        android:text="Main Station"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <Button
                    android:id="@+id/back_office_title_close_btn"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"
                    android:text="   X   "
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="10dp"
                android:weightSum="4"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="#1a2b44"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="9.4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:textColor="#8da2b7"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:text="DATA"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:textColor="#8da2b7"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:text=" >"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/back_office_download_upload"
                            android:background="@drawable/ab_imagebutton_back_office_data"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:background="@drawable/ab_imagebutton_back_office_download_upload"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/back_office_text_download_upload"
                                android:textSize="18dp"
                                android:textColor="@drawable/color_back_office_data"
                                android:textStyle="bold"
                                android:layout_alignParentBottom="true"
                                android:textAlignment="center"
                                android:text="Download / Upload"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/back_office_backup_database"
                            android:background="@drawable/ab_imagebutton_back_office_data"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:background="@drawable/ab_imagebutton_back_office_backup_database"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/back_office_text_backup_database"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:textColor="@drawable/color_back_office_data"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:text="Backup Database"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/back_office_restore_database"
                            android:background="@drawable/ab_imagebutton_back_office_data"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:background="@drawable/ab_imagebutton_back_office_restore_database"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/back_office_text_restore_database"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:textColor="@drawable/color_back_office_data"
                                android:text="Restore Database"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </RelativeLayout>


                </LinearLayout>
                <LinearLayout
                    android:background="#1a2b44"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="9.55"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="SETTING"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:textColor="#8da2b7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text=" >"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:textColor="#8da2b7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/back_office_system_setting"
                            android:background="@drawable/ab_imagebutton_back_office_setting"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:background="@drawable/ab_imagebutton_back_office_system_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/back_office_text_system_setting"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:textColor="@drawable/color_back_office_setting"
                                android:text="Setting System"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/back_office_cloud_back_office"
                            android:background="@drawable/ab_imagebutton_back_office_setting"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:background="@drawable/ab_imagebutton_back_office_cloud_back_office"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/back_office_text_cloud_back_office"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:textColor="@drawable/color_back_office_setting"
                                android:text="Cloud Back Office"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:background="#1a2b44"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="9.35"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="POS\nPROCESS"
                        android:layout_marginLeft="20dp"
                        android:textColor="#8da2b7"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text=" >"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:textColor="#8da2b7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/back_office_cash_in_out"
                            android:background="@drawable/ab_imagebutton_back_office_process"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:background="@drawable/ab_imagebutton_back_office_cash_in_out"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/back_office_text_cash_in_out"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:textColor="@drawable/color_back_office_process"
                                android:text="Cash In / Out"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/back_office_cash_drawer"
                            android:background="@drawable/ab_imagebutton_back_office_process"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:background="@drawable/ab_imagebutton_back_office_cash_drawer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/back_office_text_cash_drawer"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:textColor="@drawable/color_back_office_process"
                                android:text="Cash Drawer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/back_office_giftcard_balance_check"
                            android:background="@drawable/ab_imagebutton_back_office_process"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:background="@drawable/ab_imagebutton_back_office_gift_card_balance_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/back_office_text_gift_card_balance_check"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:textColor="@drawable/color_back_office_process"
                                android:text="Gift Card Balance Check"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:background="#1a2b44"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="9.2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="SALES\nHISTORY"
                        android:textColor="#8da2b7"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text=" >"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:textColor="#8da2b7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/back_office_pos_sales_history"
                            android:background="@drawable/ab_imagebutton_back_office_history"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:background="@drawable/ab_imagebutton_back_office_pos_sales_history"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/back_office_text_pos_sales_history"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:textColor="@drawable/color_back_office_history"
                                android:text="POS Sales History"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/back_office_online_sales_history"
                            android:background="@drawable/ab_imagebutton_back_office_history"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:background="@drawable/ab_imagebutton_back_office_online_sales_history"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/back_office_text_online_sales_history"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:textColor="@drawable/color_back_office_history"
                                android:text="Online Sales History"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/back_office_end_of_day"
                            android:background="@drawable/ab_imagebutton_back_office_history"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:background="@drawable/ab_imagebutton_back_office_end_of_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/back_office_text_end_of_day"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:textColor="@drawable/color_back_office_history"
                                android:text="End Of Day"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/back_office_batch_summary"
                            android:background="@drawable/ab_imagebutton_back_office_history"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:background="@drawable/ab_imagebutton_back_office_batch_summary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/back_office_text_batch_summary"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:textColor="@drawable/color_back_office_history"
                                android:text="Batch Summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>