<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:background="@android:color/white" >

    <LinearLayout
        android:id="@+id/shlparentln"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/saleHistoryLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="0dp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.75"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/saleHistoryTopTitleTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Sale Detail"
                            android:textSize="16dp"
                            android:textColor="#3e3d42" />

                        <Button
                            android:id="@+id/saleHistoryCloseBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:tag="saleHistoryCloseBtnTag" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:orientation="horizontal"
                        android:background="#bbbbc8">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:orientation="horizontal">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="8.5"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.3"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="12"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/saleHistoryListViewTitleTextView1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textColor="#a4a2a9"
                                        android:text="Kind" />
                                    <TextView
                                        android:id="@+id/saleHistoryListViewTitleTextView2"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="6.9"
                                        android:gravity="center"
                                        android:textColor="#a4a2a9"
                                        android:text="Service Name" />
                                    <TextView
                                        android:id="@+id/saleHistoryListViewTitleTextView3"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textColor="#a4a2a9"
                                        android:text="Qty" />
                                    <TextView
                                        android:id="@+id/saleHistoryListViewTitleTextView4"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2.1"
                                        android:gravity="center"
                                        android:textColor="#a4a2a9"
                                        android:text="Amount" />
                                    <TextView
                                        android:id="@+id/saleHistoryListViewTitleTextView5"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="3.5"
                                        android:gravity="center"
                                        android:textColor="#a4a2a9"
                                        android:text="Employee" />
                                    <TextView
                                        android:id="@+id/saleHistoryListViewTitleTextView6"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2.5"
                                        android:gravity="center"
                                        android:textColor="#a4a2a9"
                                        android:text="Total(+Tax)" />
                                    <TextView
                                        android:id="@+id/saleHistoryListViewTitleTextView7"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:gravity="center"
                                        android:textColor="#a4a2a9"
                                        android:text="Batch" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:orientation="horizontal"
                                    android:background="#bbbbc8">
                                </LinearLayout>


                                <ScrollView
                                    android:id="@+id/saleHistorySaleListScrollView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:id="@+id/saleHistorySaleListLinearLayout"
                                        android:tag="saleHistorySaleListLinearLayoutTag"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">


                                    </LinearLayout>
                                </ScrollView>

                            </LinearLayout>


                        </LinearLayout>




                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:background="#ffffff"
                            android:orientation="vertical">
                        </LinearLayout>
                        <LinearLayout
                            android:weightSum="12"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="#ffffff"

                            android:orientation="vertical"
                            android:visibility="gone">

                            <!-- 여백 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:background="#ffffff"
                                android:orientation="vertical"
                                android:visibility="gone">
                            </LinearLayout>

                            <!-- Date -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:background="#ffffff"
                                android:orientation="vertical"
                                android:visibility="gone">
                                <TextView
                                    android:id="@+id/saleHistoryDateTitleTextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Date"
                                    android:textColor="#3e3d42"
                                    android:textSize="14dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/saleHistoryStartDateEditText"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:gravity="center"
                                    android:textColor="#3e3d42"
                                    android:textStyle="bold"
                                    android:textSize="16dp"
                                    android:background="#f0f0f0"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.05"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:text="-"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.05"/>
                                <TextView
                                    android:id="@+id/saleHistoryEndDateEditText"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:gravity="center"
                                    android:textColor="#3e3d42"
                                    android:textStyle="bold"
                                    android:textSize="16dp"
                                    android:background="#f0f0f0"/>
                            </LinearLayout>

                            <!-- 여백 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.3"
                                android:background="#ffffff"
                                android:orientation="vertical"
                                android:visibility="gone">
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <RadioGroup
                                    android:id="@+id/deliverytakeawayGroup"
                                    android:tag="deliverytakeawayGroupTag"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:orientation="horizontal">
                                    <RadioButton
                                        android:id="@+id/hereRadioButton"
                                        android:tag="hereRadioButtonTag"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="15dp"
                                        android:textColor="#000000"
                                        android:text="Here"
                                        android:checked="true"  />
                                    <RadioButton
                                        android:id="@+id/takeawayRadioButton"
                                        android:tag="takeawayRadioButtonTag"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="20dp"
                                        android:textSize="15dp"
                                        android:textColor="#000000"
                                        android:text="To Go"/>
                                    <RadioButton
                                        android:id="@+id/deliveryRadioButton"
                                        android:tag="deliveryRadioButtonTag"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="20dp"
                                        android:textSize="15dp"
                                        android:textColor="#000000"
                                        android:text="Delivery" />
                                    <RadioButton
                                        android:id="@+id/allRadioButton"
                                        android:tag="allRadioButtonTag"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="20dp"
                                        android:textSize="15dp"
                                        android:textColor="#000000"
                                        android:text="All" />

                                </RadioGroup>

                            </LinearLayout>

                            <!-- 여백 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.3"
                                android:background="#ffffff"
                                android:orientation="vertical"
                                android:visibility="gone">
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:background="#ffffff"
                                android:orientation="vertical"
                                android:visibility="gone">
                                <TextView
                                    android:id="@+id/saleHistoryCustomerTitleTextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Search (Customer/Order#/Receipt#)"
                                    android:textColor="#3e3d42"
                                    android:textSize="14dp" />
                            </LinearLayout>

                            <!-- Customer -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <EditText
                                    android:id="@+id/saleHistoryCustomerSearchEditText"
                                    android:tag="saleHistoryCustomerSearchEditTextTag"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4.5"
                                    android:gravity="center"
                                    android:textColor="#3e3d42"
                                    android:textStyle="bold"
                                    android:textSize="14dp"
                                    android:background="#f0f0f0"
                                    android:cursorVisible="false"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.1"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/saleHistoryCustomerSearchSHButton"
                                        android:tag="saleHistoryCustomerSearchSHButtonTag"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="3dp" />

                                </LinearLayout>



                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="horizontal">
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">
        </LinearLayout>

        <!-- 버튼들 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/salehistory_button_ln1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/saleHistoryVoidButton"
                    android:tag="saleHistoryVoidButtonTag"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_selector_blue_bordered_button_rounded"
                    android:text="VOID"
                    android:textColor="#ffffff"
                    />
                <Button
                    android:id="@+id/saleHistoryReturnButton"
                    android:tag="saleHistoryVoidButtonTag"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_selector_blue_bordered_button_rounded"
                    android:text="RETURN"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/salehistory_button_ln2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <Button
                    android:id="@+id/saleHistoryDeliveringButton"
                    android:tag="saleHistoryVoidButtonTag"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_selector_blue_bordered_button_rounded"
                    android:text="DELIVERY"
                    android:textColor="#ffffff"
                    />
                <Button
                    android:id="@+id/saleHistoryDoneButton"
                    android:tag="saleHistoryVoidButtonTag"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_selector_blue_bordered_button_rounded"
                    android:text="DONE"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/salehistory_button_ln3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:layout_marginRight="10dp">
                <Button
                    android:id="@+id/saleHistoryReprintButton"
                    android:tag="saleHistoryVoidButtonTag"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_selector_blue_bordered_button_rounded"
                    android:text="REPRINT"
                    android:textColor="#ffffff"
                    />
                <Button
                    android:id="@+id/saleHistoryTipAdjustmentButton"
                    android:tag="saleHistoryVoidButtonTag"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_selector_blue_bordered_button_rounded"
                    android:text="TIP ADD"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <Button
                    android:id="@+id/repayButton"
                    android:tag="repayButtonTag"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:text="RE PAY"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ffffff"
                    android:scaleType="centerCrop"
                    android:background="@drawable/button_selector_blue_bordered_button_rounded"
                    />


                <Button
                    android:id="@+id/saleHistoryMMSButton"
                    android:tag="saleHistoryMMSButtonTag"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:text="MMS"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/selector_roundlayout_button_red"
                    />
            </LinearLayout>
        </LinearLayout>










    </LinearLayout>



</LinearLayout>