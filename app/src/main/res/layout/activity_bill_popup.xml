<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:background="@color/colorWhite">

    <Button
        android:id="@+id/billPopupCloseBtn"
        android:layout_margin="2dp"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_gravity="end"
        android:background="@drawable/selector_roundlayout_button_red"
        android:text="Close"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"/>

    <LinearLayout
        android:id="@+id/reprint_receipt_bg"
        android:background="@color/colorWhite"
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <ScrollView
            android:fillViewport="true"
            android:layout_gravity="center"
            android:id="@+id/reprint_receipt_scroll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/billPopupPrintBtn"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:background="@drawable/button_selector_blue_bordered_button_rounded"
            android:text="Print Bill"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/billPopupPayBtn"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:background="@drawable/selector_roundlayout_button_red"
            android:text="Pay Bill"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"/>
    </LinearLayout>



</LinearLayout>
