<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:background="@android:color/white" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:id="@+id/creditcardstatusparentln"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="CREDIT CARD PROCESSING STATUS"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:id="@+id/creditcardstatus_close"
                    android:scaleType="centerInside"
                    android:src="@drawable/ab_imagebutton_credit_card_status_close"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="11"
                android:orientation="horizontal"
                android:background="@color/colorWhite" >

                <LinearLayout
                    android:layout_marginBottom="30dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:orientation="horizontal"
                    android:background="@color/colorWhite" >

                    <LinearLayout
                        android:id="@+id/creditcardstatus_back"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:paddingTop="5dp"
                            android:paddingBottom="10dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center_vertical|right"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:weightSum="1"
                                    android:gravity="center_vertical|left"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/credit_card_status_list_StartDateEditText"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:textColor="#3e3d42"
                                        android:textStyle="bold"
                                        android:textSize="16dp"
                                        android:background="@drawable/roundlayout_cashinout_tv_bg1"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:textSize="25dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorBlack"
                                        android:text="  -  "/>
                                    <TextView
                                        android:id="@+id/credit_card_status_list_EndDateEditText"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:textColor="#3e3d42"
                                        android:textStyle="bold"
                                        android:textSize="16dp"
                                        android:background="@drawable/roundlayout_cashinout_tv_bg1"/>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="1.7"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <CheckBox
                                    android:id="@+id/credit_card_status_pending"
                                    android:text=" Pending"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="17dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"/>
                                <CheckBox
                                    android:id="@+id/credit_card_status_success"
                                    android:text=" Success"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="17dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"/>
                                <CheckBox
                                    android:id="@+id/credit_card_status_decline"
                                    android:text=" Decline"
                                    android:textSize="17dp"
                                    android:textColor="@color/colorBlack"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"/>
                            </LinearLayout>

                            <ImageButton
                                android:layout_marginTop="5dp"
                                android:scaleType="centerInside"
                                android:id="@+id/creditcardstatus_list_date_search"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ab_images_credit_card_status_search"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:orientation="horizontal"
                            android:background="#000000">
                            <LinearLayout
                                android:visibility="gone"
                                android:layout_marginRight="2dp"
                                android:background="#616180"
                                android:layout_weight="0.8"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:text="Order No."
                                    android:gravity="center"
                                    android:textSize="14dp"
                                    android:textColor="@color/colorBlack"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </LinearLayout>

                            <LinearLayout
                                android:background="#ffffff"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5"
                                    android:gravity="center"
                                    android:background="#616180"
                                    android:textSize="14dp"
                                    android:textColor="@color/colorWhite"
                                    android:text="Date" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="4.5"
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginLeft="2dp"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:background="#616180"
                                    android:textSize="14dp"
                                    android:textColor="@color/colorWhite"
                                    android:text="Items" />
                                <TextView
                                    android:layout_marginLeft="2dp"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:background="#616180"
                                    android:textSize="14dp"
                                    android:textColor="@color/colorWhite"
                                    android:text="Amount" />
                                <LinearLayout
                                    android:layout_marginLeft="2dp"
                                    android:layout_weight="1.5"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:background="#616180"
                                        android:textSize="14dp"
                                        android:textColor="@color/colorWhite"
                                        android:text="Result" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginLeft="2dp"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:background="#616180"
                                        android:textSize="14dp"
                                        android:textColor="@color/colorBlack"
                                        android:text=" " />
                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                        <ListView
                            android:id="@+id/creditcardstatus_list"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="10" />

                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>


        </LinearLayout>
    </LinearLayout>





</LinearLayout>